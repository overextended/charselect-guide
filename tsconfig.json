{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "module": "es2020",
    "target": "es2021",
    "lib": ["es2021"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "strictFunctionTypes": true,
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true
  }
}
